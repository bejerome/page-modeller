{
  "name": "page-modeller",
  "version": "1.5.4",
  "description": "A browser extension for modelling web pages for automation",
  "main": "gulpfile.js",
  "author": "Dan Humphrey - danh2000@gmail.com",
  "homepage": "https://github.com/danhumphrey/page-modeller",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ext .js,.vue src",
    "prettier": "prettier \"src/**/*.{js,vue}\"",
    "prettier:write": "npm run prettier -- --write",
    "clean": "rimraf build && rimraf build-firefox",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --hide-modules",
    "build:dev": "npm run clean && cross-env NODE_ENV=development webpack --hide-modules",
    "zip:chrome": "node scripts/build-chrome.js",
    "zip:firefox": "web-ext build -s build-firefox -a release-firefox --overwrite-dest",
    "manifest:firefox": "cp -a build build-firefox && cd scripts && node firefox-manifest.js",
    "sign:firefox": "source .appenv && npm run manifest:firefox && web-ext sign --api-key $AMO_KEY --api-secret $AMO_SECRET -s build-firefox -a release-firefox",
    "zip": "npm run zip:chrome && npm run zip:firefox",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "launch:chrome": "cross-env LAUNCH_CHROME=true HMR=true npm run watch:dev",
    "launch:firefox": "cross-env LAUNCH_FIREFOX=true npm run watch:dev",
    "version": "cd scripts && node release.js && cd ./",
    "release": "npm run version && npm run build && npm run zip:chrome && npm run sign:firefox"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danhumphrey/page-modeller.git"
  },
  "dependencies": {
    "babel-plugin-rewire": "^1.2.0",
    "lodash": "^4.17.15",
    "scroll-into-view-if-needed": "^2.2.22",
    "simmerjs": "^0.5.6",
    "vue": "^2.6.11",
    "vuelidate": "^0.7.4",
    "vuetify": "^1.5.22"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/preset-env": "^7.7.7",
    "@types/chrome": "^0.0.91",
    "archiver": "^3.1.1",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "chrome-launch": "^1.1.4",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^6.0.3",
    "css-loader": "^3.4.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-import-resolver-webpack": "^0.12.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-vue": "^6.1.2",
    "file-loader": "^5.0.2",
    "husky": "^4.0.1",
    "inquirer": "^7.0.3",
    "jest": "^24.9.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
    "semver": "^7.1.1",
    "terser-webpack-plugin": "^2.3.1",
    "vue-loader": "^15.8.3",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.41.5",
    "webpack-chrome-extension-reloader": "^1.3.0",
    "webpack-cli": "^3.3.10",
    "webpack-shell-plugin": "^0.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint && npm test"
    }
  }
}
